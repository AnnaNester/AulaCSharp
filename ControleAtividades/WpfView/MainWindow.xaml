        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="48,137,0,0" VerticalAlignment="Top" Width="177" Height="80"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Height="23" Margin="379,177,0,0" TextWrapping="Wrap" Text="Digite seu nome" VerticalAlignment="Top" Width="120" Background="White" TextChanged="txtNome_TextChanged"/>

    </Grid>
</Window>
